<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPlanetLogo"
                android:layout_width="@dimen/image_cardview_logo_width_size"
                android:layout_height="@dimen/image_cardview_logo_height_size"
                android:layout_marginStart="@dimen/image_padding"
                android:layout_marginTop="@dimen/image_padding"
                android:layout_marginBottom="@dimen/image_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtPlanetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_cv_header_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_cv_header_size"
                app:layout_constraintStart_toEndOf="@+id/imgPlanetLogo"
                app:layout_constraintTop_toTopOf="@+id/imgPlanetLogo" />

            <TextView
                android:id="@+id/txtPlanetExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_cv_padding"
                app:layout_constraintStart_toStartOf="@+id/txtPlanetName"
                app:layout_constraintTop_toBottomOf="@+id/txtPlanetName" />

            <TextView
                android:id="@+id/txtPlanetExplanation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_cv_padding"
                app:layout_constraintStart_toStartOf="@+id/txtPlanetExplanation"
                app:layout_constraintTop_toBottomOf="@+id/txtPlanetExplanation" />

            <TextView
                android:id="@+id/txtPlanetExplanation3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_cv_padding"
                android:layout_marginBottom="@dimen/text_cv_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtPlanetExplanation2"
                app:layout_constraintTop_toBottomOf="@+id/txtPlanetExplanation2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>